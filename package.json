{
  "name": "url-shortener",
  "version": "1.0.0",
  "description": "shortens your URLs",
  "main": "dist/index.js",
  "scripts": {
    "start": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "dev": "node .",
    "dev:start": "npm-run-all build dev",
    "build": "npm-run-all clean lint tsc copy-assets",
    "copy-assets": "ts-node tools/copyAssets",
    "tsc": "tsc",
    "clean": "rimraf dist/*",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest"
  },
  "author": "sweetkippy",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.12",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "express": "^4.17.1",
    "moment": "^2.29.1",
    "mongoose": "^5.12.13",
    "sanitize-html": "^2.4.0",
    "shelljs": "^0.8.4",
    "unique-names-generator": "^4.5.0",
    "valid-url": "^1.0.9",
    "validator": "^13.6.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.10",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.23",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^14.0.27",
    "@types/sanitize-html": "^2.3.1",
    "@types/shelljs": "0.7.9",
    "@types/valid-url": "^1.0.3",
    "@types/validator": "^13.1.4",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.3",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.1.6",
    "tslint": "^6.1.3",
    "typescript": "^4.3.2"
  },
  "lint": "tslint -c tslint.json -p tsconfig.json"
}
